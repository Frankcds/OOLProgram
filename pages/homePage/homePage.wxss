/* pages/homePage/homePage.wxss */
page{
  width:100%;
  height:100%;
}
.container-box{
   overflow: hidden;
   width:  100%;
   position:  static;
   height:  100%;
   background-size:  cover;
   background-repeat:  no-repeat;
   position:relative;
}

/*首页用户图标*/
.userLogs{
  width:82rpx;
  margin-top:20rpx;
  margin-left:20rpx;
  display:inline-block;
}
/*底部按钮盒子*/
.btnBox{
  width:100%;
  height:100%;
  display:flex;
  justify-content:center;
}

/*底部按钮*/
.scanBtn{
  width:690rpx;
  margin-top:860rpx;
}

/*中间提示框部分*/
.shareBox{
  width:430rpx;
  height:110rpx;
  background-color:black;
  border-radius:15rpx;
  margin:0 auto;
  margin-top:385rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  opacity:0.7;
}
.shareText{
  display:-webkit-box;
  width:358rpx;
  font-size:29rpx;
  text-align:center;
  color:#fff;
  letter-spacing: 2px;
}

